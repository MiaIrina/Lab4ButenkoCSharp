<UserControl x:Class="ButenkoLab4.Views.MainMenuControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ButenkoLab4.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Background="AntiqueWhite">
        <Grid.RowDefinitions>
            <RowDefinition Height="70" />
            <RowDefinition Height="70" />
            <RowDefinition Height="70" />
        </Grid.RowDefinitions>
        <Button Content="Add user" Grid.Row="0" Margin="350,22.8,350,17.4"  Command="{Binding AddUserCommand}"></Button>
        <Button Content="List of users" Grid.Row="1"   Margin="350,15.6,350,24.6"  Command="{Binding UsersListCommand}"></Button>
        <Button Content="Exit" Grid.Row="2"    Margin="374,161.6,376,-121.4" Command="{Binding ExitCommand}"></Button>
    </Grid>
</UserControl>
